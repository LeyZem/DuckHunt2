            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Height="43" Margin="425,8,0,0" VerticalAlignment="Top" Width="105"/>
    </Grid>
</Window>
